@model QuanLyTour.Model.LoaiHinhDuLichModel
@{
    ViewBag.Title = "DeleteLoaiHinh";
}

<h2>Delete Loại Hình</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        <div class="col-md-2 control-label ">
            <strong>Mã Loại Hình</strong>
        </div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.MaLoaiHinh, new { htmlAttributes = new { @class = "form-control", @readOnly = "true" } })
            @Html.ValidationMessageFor(model => model.MaLoaiHinh, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-2 control-label ">
            <strong>Tên Loại Hình</strong>
        </div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.TenLoaiHinh, new { htmlAttributes = new { @class = "form-control", @readOnly = "true" } })
            @Html.ValidationMessageFor(model => model.TenLoaiHinh, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group ">
        <strong class="col-md-offset-2 col-md-10 text-danger">*Suy nghĩ kĩ trước khi xóa, đoàn đã xóa không thể restore!!!</strong>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Delete" class="btn btn-danger" />
        </div>
    </div>

</div>
}

<div>
    @Html.ActionLink("Back to List", "LoaiHinh")
</div>