@model QuanLyTour.Model.LoaiHinhDuLichModel
@{
    ViewBag.Title = "createLHDL";
}

<h2>Thêm Loại hình du lịch</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="form-group">
        <div class="col-md-2 control-label ">
            <strong>Tên Loại Hình</strong>
        </div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.TenLoaiHinh, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TenLoaiHinh, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>

</div>
}

<div>
    @Html.ActionLink("Back to List", "LoaiHinh")
</div>