@model QuanLyTour.Model.TourDuLichModel

@{
	ViewBag.Title = "CreateTour";
}

<h2>CreateTour</h2>

@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">
		<h4>TourDuLichModel</h4>
		<hr />
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })



		<div class="form-group">
			<div class="col-md-2 control-label ">
				<strong>Tên Tour</strong>
			</div>
			<div class="col-md-10">
				@Html.EditorFor(model => model.TenTour, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.TenTour, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-2 control-label ">
				<strong>Loại hình du lịch</strong>
			</div>
			<div class="col-md-10">
				@Html.DropDownListFor(model => model.MaLoaiHinh, null, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.MaLoaiHinh, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-2 control-label ">
				<strong>Địa điểm</strong>
			</div>
			<div class="col-md-10">
				@Html.DropDownListFor(model => model.DacDiem, null, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.TenDiaDiem, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-2 control-label ">
				<strong>Giá</strong>
			</div>
			<div class="col-md-10">
				@Html.EditorFor(model => model.ThanhTien, new { htmlAttributes = new { @class = "form-control" } })
				@Html.ValidationMessageFor(model => model.ThanhTien, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-2 control-label ">
				<strong>Thời gian bắt đầu</strong>
			</div>
			<div class="col-md-10">
				@Html.TextBoxFor(model => model.ThoiGianBatDau, new { htmlAttributes = new { @class = "form-control" }, @type = "date" })
				@Html.ValidationMessageFor(model => model.ThoiGianBatDau, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-2 control-label ">
				<strong>Thời gian kết thúc</strong>
			</div>
			<div class="col-md-10">
				@Html.TextBoxFor(model => model.ThoiGianKetThuc, new { htmlAttributes = new { @class = "form-control" }, @type = "date" })
				@Html.ValidationMessageFor(model => model.ThoiGianKetThuc, "", new { @class = "text-danger" })
			</div>
		</div>




		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Create" class="btn btn-default" />
			</div>
		</div>
	</div>
}

<div>
	@Html.ActionLink("Back to List", "QLTour")
</div>