@model IEnumerable<QuanLyTour.Model.TourDuLichModel>

@{ ViewBag.Title = "QLTour"; }



<h2>Quản Lý Tour</h2>

<div style="margin: 20px 0px; ">
	@Html.ActionLink("Thêm tour du lịch", "CreateTour")
</div>


<table class="table">
	<tr>
		<th>
			<p>Tên Tour</p>
		</th>
		<th>
			<p>Tên địa điểm</p>
		</th>
		<th>
			<p>Tên loại hình</p>
		</th>
		<th>
			<p>Giá</p>
		</th>
		<th>
			<p>Ngày bắt đầu</p>
		</th>
		<th>
			<p>Ngày kết thúc</p>
		</th>

		<th></th>
	</tr>

	@foreach (var item in Model)
	{
<tr>
	<td>
		@Html.DisplayFor(modelItem => item.TenTour)
	</td>
	<td>
		@Html.DisplayFor(modelItem => item.TenDiaDiem)
	</td>
	<td>
		@Html.DisplayFor(modelItem => item.TenLoaiTour)
	</td>
	<td>
		@Html.DisplayFor(modelItem => item.ThanhTien)
	</td>
	<td>
		@Html.DisplayFor(modelItem => item.ThoiGianBatDau, new { htmlAttributes = new { @type = "text", @class = "form-control" } })
	</td>
	<td>
		@Html.DisplayFor(modelItem => item.ThoiGianKetThuc)
	</td>

	<td>
		@Html.ActionLink("Edit", "EditTour", new { id = item.MaTour.Replace(" ", "") }) |
		@Html.ActionLink("Delete", "DeleteTour", new { id = item.MaTour.Replace(" ", "") })
	</td>
</tr>}

</table>