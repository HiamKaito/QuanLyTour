@model QuanLyTour.Models.LoaiChiPhiModel
@{
    ViewBag.Title = "EditLoaiChiPhi";
}

<h2>Edit Loại Chi Phí</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="col-md-2 control-label ">
                <strong>Mã Loại Chi Phí</strong>
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaLoaiChiPhi, new { htmlAttributes = new { @class = "form-control", @readOnly = "true" } })
                @Html.ValidationMessageFor(model => model.MaLoaiChiPhi, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-2 control-label ">
                <strong>Tên Loại Chi Phí</strong>
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenLoaiChiPhi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenLoaiChiPhi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Update" class="btn btn-default" />
            </div>
        </div>

    </div>
}

<div>
    @Html.ActionLink("Back to List", "LoaiChiPhi")
</div>
