@model QuanLyTour.Models.LoaiChiPhiModel
@{
    ViewBag.Title = "DeleteLoaiChiPhi";
}

<h2>DeleteLoaiChiPhi</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="col-md-2 control-label ">
                <strong>Mã Loại Chi Phí</strong>
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaLoaiChiPhi, new { htmlAttributes = new { @class = "form-control", @readOnly = "true" } })
                @Html.ValidationMessageFor(model => model.MaLoaiChiPhi, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-2 control-label ">
                <strong>Tên Loại Chi Phí</strong>
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenLoaiChiPhi, new { htmlAttributes = new { @class = "form-control", @readOnly = "true" } })
                @Html.ValidationMessageFor(model => model.TenLoaiChiPhi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group ">
            <strong class="col-md-offset-2 col-md-10 text-danger">*Suy nghĩ kĩ trước khi xóa, loại chi phí đã xóa không thể restore!!!</strong>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        </div>

    </div>
}

<div>
